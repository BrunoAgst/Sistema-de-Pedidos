<%- include("./partials/header.ejs") %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    <br>
    <div class="container">
        <hr>
        <nav class="navbar navbar-expand">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <h1 class="nav-link">Lista de Clientes</h1>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-warning nav-link" href="/visualizar-usuarios"> Gerenciar Usu√°rios</a>
                </li>
            </ul>
        </nav>
        <hr>
        <a href="/cadastrar-cliente"><button class="btn btn-success">Cadastrar Pedido</button></a>
        <br>
        <br>
        <% clientes.forEach(cliente => { %>
        <div class="card">
            <div class="card-body">
                <h3><%= cliente.name %></h3>
            </div>
            <div class="card-footer">
                <a href="/cadastrar-produto/<%= cliente.slug %>"><button class="btn btn-success">Cadastrar Produto</button></a>
                <a href="/detalhes/<%= cliente.slug %>"><button class="btn btn-primary">Visualizar Pedido</button></a>
                <a href="/excluir-cliente/<%= cliente.id %>"><button class="btn btn-danger">Excluir Cliente</button></a>
            </div>
        </div>
        <br>
        <% }) %>
    </div>
</body>
<%- include("./partials/footer.ejs") %>